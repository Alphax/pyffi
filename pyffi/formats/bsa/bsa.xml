<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE fileformat>
<fileformat>

    <!--
    *******************
    *** basic types ***
    *******************
    -->

    <basic name="UInt32">
        An unsigned 32-bit integer.
    </basic>

    <basic name="UInt64">
        An unsigned 32-bit integer.
    </basic>

    <basic name="ZString">
        A null terminated string.
    </basic>

    <basic name="FileSignature">
        "BSA\x00".
    </basic>

    <!--
    *******************
    *** alias types ***
    *******************
    -->

    <!--
    ******************
    *** enum types ***
    ******************
    -->

    <!--
    ******************
    *** bitstructs ***
    ******************
    -->

    <bitstruct name="ArchiveFlags" numbytes="4">
        <bits name="Has Folder Records" numbits="1" />
        <bits name="Has File Records" numbits="1" />
        <bits name="Is Compressed" numbits="1" />
        <bits name="Unknown 4" numbits="1" />
        <bits name="Unknown 5" numbits="1">
            Unknown. Observed being set in official BSA files containing
            sounds (but not voices).
        </bits>
        <bits name="Unknown 6" numbits="1" />
        <bits name="Unknown 7" numbits="1" />
        <bits name="Unknown 8" numbits="1">
            Unknown. Related to the bInvalidateOlderFiles and
            bCheckRuntimeCollisions INI settings in Oblivion.ini.
            Also somehow related to is_compressed.
        </bits>
        <bits name="Unknown 9" default="1" numbits="1">
            Unknown, but observed being set in official BSA files.
        </bits>
        <bits name="Unknown 10" default="1" numbits="1">
            Unknown, but observed being set in official BSA files.
        </bits>
        <bits name="Unknown 11" default="1" numbits="1">
            Unknown, but observed being set in official BSA files.
        </bits>
    </bitstruct>

    <bitstruct name="FileFlags" numbytes="4">
        <bits name="Has Folder Records" numbits="1" />
    </bitstruct>

    <bitstruct name="FileSize" numbytes="4">
        <bits name="Num Bytes" numbits="30" />
        <bits name="Is Compressed Override" numbits="1" />
    </bitstruct>

    <!--
    ***************
    *** structs ***
    ***************
    -->

   <struct name="File">
       <add name="Name Hash" type="UInt64" />
       <add name="File Size" type="FileSize" />
       <add name="Offset" type="UInt32">
           Absolute position in file where raw file data starts.
       </add>
       <add name="Name" type="ZString" abstract="1" /><!-- written after all folders and files -->
   </struct>

   <struct name="Folder">
       <add name="Name Hash" type="UInt64" />
       <add name="Num Files" type="UInt32">
           Number of files in this folder.
       </add>
       <add name="Offset" type="UInt32">
           Absolute position in file where file data starts.
       </add>
       <add name="Name" type="ZString" abstract="1" /><!-- written after all folders -->
       <add name="Files" type="File" arr1="Num Files" abstract="1" /><!-- written after all folders -->
   </struct>

   <struct name="Header">
       <add name="Signature" type="FileSignature">Always BSA\x00</add>
       <add name="Version" type="UInt32">103 for Oblivion</add>
       <add name="Offset" type="UInt32" default="36">
           Position in file where folder data starts.
       </add>
       <add name="Archive Flags" type="ArchiveFlags">Various settings.</add>
       <add name="Num Folders" type="UInt32" />
       <add name="Num Files" type="UInt32" />
       <add name="Total Folder Name Length" type="UInt32">
           Total length of all folder names, including \0's but not including
           the prefixed length byte.
       </add>
       <add name="Total File Name Length" type="UInt32">
           Total length of all file names, including \0's.
       </add>
       <add name="File Flags" type="FileFlags">
           Seems to indicate what kinds of files are in the archive.
       </add>
       <add name="Folders" type="Folder" arr1="Num Folders" abstract="1" />
   </struct>

</fileformat>
